{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
	{{ form_start(TechnicalAnnouncementConfFormType) }}
	<div class="card">
		<h3 class="card-header">
			<i class="material-icons">settings</i>
			{{ 'Alert about the next scheduled maintenance'|trans({}, 'Modules.Technicalannouncement.Admin') }}
		</h3>
		<div class="card-body">
			<div class="form-wrapper">
